{
	"manifest_version": 2,

	"name": "__MSG_extName__",
	"short_name": "__MSG_shrtExtName__",
	"default_locale": "en",
	"description": "__MSG_extDesc__",
	"version": "3.4",
	
	"icons": {
		"16": "icon16.png",
		"32": "icon32.png",
		"48": "icon48.png",
		"64": "icon64.png",
		"128": "icon128.png"
	},

	"background": {
		"scripts": ["background.js"]
	},
	
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["page.js"],
			"all_frames": true
		}
	],
	
	"permissions": ["contextMenus"]
}
